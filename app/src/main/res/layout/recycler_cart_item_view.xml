<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cart_item_height"
    android:paddingStart="16dp">

    <TextView
        android:id="@+id/cart_item_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/place_holder"
        android:textColor="@color/item_title_font_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/cart_item_delete_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cart_item_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_holder"
        android:textColor="@color/price_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/cart_item_title_tv"
        app:layout_constraintTop_toBottomOf="@id/cart_item_title_tv" />


    <ImageView
        android:id="@+id/cart_item_delete_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="13dp"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>